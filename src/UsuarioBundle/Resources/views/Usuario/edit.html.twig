{% extends '::base.html.twig' %}

{% block body -%}
   	
<div class="row">
	<div class="col-lg-12">
		<div class="main-box">
			<header class="main-box-header clearfix">
				<br><br><br>
				<h1>Registro de Usuario</h1>
			</header>
		<div class="main-box-body clearfix">
			<div role="form">
			{{ form_start(edit_form) }}
			<div class="col-lg-12">
				<div class="row">
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.nombre)}}
    					{{ form_widget(edit_form.nombre, {attr: {'class':'form-control', 'placeholder':'Nombre'}})}}
					</div>
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.appat)}}
    					{{ form_widget(edit_form.appat, {attr: {'class':'form-control', 'placeholder':'Apellido Paterno'}})}}
					</div>
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.apmat)}}
    					{{ form_widget(edit_form.apmat, {attr: {'class':'form-control', 'placeholder':'Apellido Materno'}})}}
					</div>
				</div>
				<div class="row">
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.correo)}}
    					{{ form_widget(edit_form.correo, {attr: {'class':'form-control', 'placeholder':'Correo'}})}}
					</div>
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.password.first)}}
    					{{ form_widget(edit_form.password.first, {attr: {'class':'form-control', 'placeholder':'Password'}})}}
					</div>
					<div class="form-group col-xs-4">
						<br>
						{{ form_errors(edit_form.password.second)}}
    					{{ form_widget(edit_form.password.second, {attr: {'class':'form-control', 'placeholder':'Confirmar Password'}})}}
					</div>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="row">
					<header class="main-box-header clearfix">
						<h1>Datos de Facturacion</h1>
					</header>
				</div>
				<div class="row">
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.razonsocial)}}
    					{{ form_widget(edit_form.razonsocial, {attr: {'class':'form-control', 'placeholder':'Razon Social'}})}}
					</div>
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.rfc)}}
    					{{ form_widget(edit_form.rfc, {attr: {'class':'form-control', 'placeholder':'RFC'}})}}
					</div>
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.rtributario)}}
    					{{ form_widget(edit_form.rtributario, {attr: {'class':'form-control', 'placeholder':'Regimen Tributario'}})}}
					</div>
				</div>
				<div class="row">
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.calle)}}
    					{{ form_widget(edit_form.calle, {attr: {'class':'form-control', 'placeholder':'Calle'}})}}
					</div>
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.noext)}}
    					{{ form_widget(edit_form.noext, {attr: {'class':'form-control', 'placeholder':'Numero Exterior'}})}}
					</div>
					<div class="form-groups col-xs-4">
						<br>
						{{ form_errors(edit_form.noint)}}
    					{{ form_widget(edit_form.noint, {attr: {'class':'form-control', 'placeholder':'Numero Interior'}})}}
					</div>
				</div>
				<div class="row">
					<div class="form-groups col-xs-4">
					<br>
					{{ form_errors(edit_form.colonia)}}
    				{{ form_widget(edit_form.colonia, {attr: {'class':'form-control', 'placeholder':'colonia'}})}}
    				</div>
    				<div class="form-groups col-xs-4">
    				<br>	
    				{{ form_errors(edit_form.cpostal)}}
    				{{ form_widget(edit_form.cpostal, {attr: {'class':'form-control', 'placeholder':'Codigo Postal'}})}}
    				</div>
    				<div class="form-groups col-xs-4">
    				<br>
    				{{ form_errors(edit_form.localidad)}}
    				{{ form_widget(edit_form.localidad, {attr: {'class':'form-control', 'placeholder':'Localidad'}})}}
    				</div>
    			</div>
    			<div class="row">
    				<div class="form-groups col-xs-4">
    				<br>
    				{{ form_errors(edit_form.telefono)}}
    				{{ form_widget(edit_form.telefono, {attr: {'class':'form-control', 'placeholder':'Telefono'}})}}
    				</div>
    				<div class="form-groups col-xs-4">
    				<br>
    				{{ form_errors(edit_form.pais)}}
    				{{ form_widget(edit_form.pais, {attr: {'class':'form-control', 'placeholder':'Pais'}})}}
    				</div>	
    				<div class="form-groups col-xs-4">
    				<br>
    				{{ form_errors(edit_form.estado)}}
    				{{ form_widget(edit_form.estado, {attr: {'class':'form-control', 'placeholder':'Estado'}})}}
    				</div>
    				<div class="form-groups col-xs-4">
    				<br>
    				{{ form_errors(edit_form.delemuni)}}
    				{{ form_widget(edit_form.delemuni, {attr: {'class':'form-control', 'placeholder':'Delegacion o Municipio'}})}}
    				</div>
    					<div class="row">
    						<div class="form-groups col-xs-5">
    							{{form_widget(edit_form._token) }}
	    						<button class="btn btn-l">
								<a href="{{ path('usuario_create') }}"></a>
								Aceptar
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
{% endblock %}
